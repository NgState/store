{
  "name": "ng-state",
  "version": "2.2.0",
  "description": "RxJS and ImmutableJs powered nested state managment for Angular2 apps inspired by @ngrx.",
  "main": "./bundles/store.umd.js",
  "module": "./index.js",
  "scripts": {
    "test": "karma start",
    "test:watch": "karma start --no-single-run --auto-watch --debug --browsers=ChromeDebug",
    "test:watch:phantom": "karma start --no-single-run --auto-watch --debug --browsers=PhantomDebug",
    "clean:pre": "rimraf release",
    "clean:post": "rimraf \"src/**/*.ngfactory.ts\"",
    "copy": "cpy LICENSE package.json README.md release",
    "build:js": "ngc -p tsconfig.dist.json",
    "build:umd": "rollup -c rollup.config.js",
    "build:uglify": "uglifyjs -c --screw-ie8 --comments -o ./release/bundles/store.min.umd.js ./release/bundles/store.umd.js",
    "prebuild": "npm run test && npm run clean:pre",
    "postbuild": "npm run clean:post && npm run copy",
    "build": "npm run build:js && npm run build:umd && npm run build:uglify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ng-state/store.git"
  },
  "keywords": [
    "RxJS",
    "Angular2",
    "Immutable Js",
    "Nested",
    "State"
  ],
  "author": "Vytautas Pranskunas <vytautas.pranskunas@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ng-state/store/issues"
  },
  "homepage": "https://github.com/ng-state/store#readme",
  "dependencies": {
    "@angular/common": "^4.1.0",
    "@angular/core": "^4.1.0",
    "@angular/router": "^4.1.0",
    "@angular/platform-browser": "^4.1.0",
    "core-js": "^2.4.1",
    "immutable": "^3.8.1",
    "immutable-cursor": "^1.0.2",
    "rxjs": "^5.0.1",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "@types/es6-shim": "^0.31.32",
    "@types/jasmine": "^2.2.33",
    "@types/node": "^6.0.38",
    "awesome-typescript-loader": "^2.2.1",
    "cpy-cli": "^1.0.1",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine": "^2.5.0",
    "karma": "^1.4.1",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-coverage": "~1.1.1",
    "karma-jasmine": "~1.0.2",
    "karma-mocha-reporter": "~2.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-remap-istanbul": "^0.6.0",
    "karma-sourcemap-loader": "~0.3.7",
    "karma-typescript": "^2.1.7",
    "karma-webpack": "^2.0.2",
    "rimraf": "^2.5.4",
    "rollup": "^0.34.13",
    "rxjs": "^5.0.0-beta.11",
    "ts-loader": "^2.0.0",
    "tsify": "^3.0.1",
    "tslint": "^3.15.1",
    "tslint-loader": "^2.1.5",
    "typescript": "^2.2.2",
    "uglifyjs": "^2.4.10",
    "webpack": "^2.2.1",
    "zone.js": "^0.6.17"
  }
}
