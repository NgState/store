{
  "name": "ng-state",
  "module": "./index.js",
  "scripts": {
    "ngc": "ngc",
    "tsc": "tsc",
    "test": "jest --verbose",
    "test:watch": "karma start --no-single-run --auto-watch --debug --browsers=ChromeDebug",
    "clean:pre": "rimraf release",
    "clean:post": "rimraf \"src/**/*.ngfactory.ts\"",
    "copy": "cpy LICENSE ./src/package.json README.md ng-state-flow.png release",
    "build:js": "ngc -p tsconfig.dist.json",
    "build:umd": "rollup -c rollup.config.js",
    "build:uglify": "uglifyjs -c --screw-ie8 --comments -o ./release/bundles/store.min.umd.js ./release/bundles/store.umd.js",
    "prebuild": "npm run clean:pre",
    "postbuild": "npm run clean:post && npm run copy",
    "build": "npm run build:js && npm run build:umd && npm run build:uglify"
  },
  "devDependencies": {
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@types/es6-shim": "^0.31.32",
    "@types/jest": "^22.2.0",
    "@types/node": "^6.0.38",
    "core-js": "^2.5.1",
    "cpy-cli": "^1.0.1",
    "immutable": "^3.8.1",
    "immutable-cursor": "^2.0.1",
    "jest": "^22.4.2",
    "rollup": "^0.34.13",
    "rxjs": "^5.5.2",
    "ts-jest": "^22.4.1",
    "ts-loader": "^2.0.0",
    "tsify": "^3.0.1",
    "tslint": "^3.15.1",
    "typescript": "^2.6.1",
    "uglifyjs": "^2.4.10",
    "zone.js": "^0.8.18"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(spec/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": false,
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "tests-coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@types/jasmine": "^2.8.6"
  }
}
